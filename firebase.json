{
  "rulesFile": "database.rules.json",
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 3300
    },
    "functions": {
      "port": 3400
    },
    "firestore": {
      "port": 3500
    },
    "database": {
      "port": 3600
    },
    "ui": {
      "enabled": true,
      "port": 3700
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
